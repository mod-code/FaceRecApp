WindowManager:
    WindowMenu:

<WindowMenu>:         # Okno menu głównego
    name: "menu"

    img_inp: img_inp
    img_exp: img_exp
    nr_zdj_text: nr_zdj_text
    tryb_text: tryb_text

    GridLayout:
        cols:1

        Label:
            text: u"AI - Wykrywanie Twarzy:" # "Wykrywanie Twarzy:"
            font_size: 60

        GridLayout:
            cols:2

            Image:
                id: img_inp
                source: "./Image_Input/1.jpg"

            Image:
                id: img_exp
                source: "./instrukcja.png"


        GridLayout:
            cols:1
            GridLayout:
                cols:2
                spacing: 10
                padding: 0

                GridLayout:
                    cols:2
                    padding: 5
                    GridLayout:
                        cols:1
                        Label:
                            text: "Za\u0142aduj zdj\u0119cie"
                        Label:
                            id: nr_zdj_text
                            text: "Aktualne zdj\u0119cie: 1"
                    Button:
                        text:"Losuj zdj\u0119cie"
                        on_release:
                            root.random_img()
                Label:
                    id: tryb_text
                    text: "Tryb: DEFAULT"

                GridLayout:
                    cols:8
                    Button:
                        text:"1"
                        on_release:
                            root.load_img(1)
                    Button:
                        text:"2"
                        on_release:
                            root.load_img(2)
                    Button:
                        text:"3"
                        on_release:
                            root.load_img(3)
                    Button:
                        text:"4"
                        on_release:
                            root.load_img(4)
                    Button:
                        text:"5"
                        on_release:
                            root.load_img(5)
                    Button:
                        text:"6"
                        on_release:
                            root.load_img(6)
                    Button:
                        text:"7"
                        on_release:
                            root.load_img(7)
                    Button:
                        text:"8"
                        on_release:
                            root.load_img(8)
                    Button:
                        text:"9"
                        on_release:
                            root.load_img(9)
                    Button:
                        text:"10"
                        on_release:
                            root.load_img(10)
                    Button:
                        text:"11"
                        on_release:
                            root.load_img(11)
                    Button:
                        text:"12"
                        on_release:
                            root.load_img(12)
                    Button:
                        text:"13"
                        on_release:
                            root.load_img(13)
                    Button:
                        text:"14"
                        on_release:
                            root.load_img(14)
                    Button:
                        text:"15"
                        on_release:
                            root.load_img(15)
                    Button:
                        text:"16"
                        on_release:
                            root.load_img(16)

                GridLayout:
                    cols:2
                    Button:
                        text:"Znajd\u017A twarze"
                        on_release:
                            root.detect_faces()
                    GridLayout:
                        cols:2
                        Button:
                            text:"DEFAULT"
                            on_release:
                                root.change_mode('default')
                        Button:
                            text:"ALT"
                            on_release:
                                root.change_mode('alt')
                        Button:
                            text:"ALT2"
                            on_release:
                                root.change_mode('alt2')
                        Button:
                            text:"ALT_TREE"
                            on_release:
                                root.change_mode('alt_tree')

            GridLayout:
                cols:1
                Label:
                    #text: "Projekt 2020 - Analiza Obrazów Cyfrowych II\nPolitechnika Krakowska\n\n Michał Odrzywołek"
                    text: u"Projekt 2020 - Analiza Obraz\u00F3w Cyfrowych II\nPolitechnika Krakowska\n\n Micha\u0142 Odrzywo\u0142ek"